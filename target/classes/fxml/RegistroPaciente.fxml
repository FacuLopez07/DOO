<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uml.version.RegistroPacienteController">
    <children>
        <StackPane>
            <VBox spacing="10.0" style="-fx-padding: 20;" alignment="CENTER">
                <TextField fx:id="nombreField" promptText="Nombre" prefWidth="300.0" />
                <TextField fx:id="apellidoField" promptText="Apellido" prefWidth="300.0" />
                <TextField fx:id="dniField" promptText="DNI" prefWidth="300.0" />
                <TextField fx:id="estadoField" promptText="Estado" prefWidth="300.0" />
                <HBox spacing="10.0">
                    <Button fx:id="saveButton" text="Guardar" onAction="#handleSave" />
                    <Region minWidth="150" />
                    <Button fx:id="cancelButton" text="Cancelar" onAction="#handleCancel" />
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
