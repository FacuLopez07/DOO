<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="uml.version.ConsultaPrincipalController">
    <children>
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <TextField fx:id="searchField" promptText="Buscar..." />
                <Button fx:id="searchButton" onAction="#handleSearch" text="Buscar" />
                <Region minWidth="50" />
                <Button fx:id="detailsButton" onAction="#handleViewDetails" text="Ver Detalles" />
                <Region minWidth="50" />
                <Button fx:id="registerButton" onAction="#handleRegister" text="Registrar Nuevo Paciente" />
            </HBox>
            <TableView fx:id="tableViewPacientes" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="columnOrden" prefWidth="50" text="Nro" />
                    <TableColumn fx:id="columnDni" prefWidth="115.0" text="Dni" />
                    <TableColumn fx:id="columnNombre" prefWidth="177.0" text="Nombre" />
                    <TableColumn fx:id="columnApellido" prefWidth="182.0" text="Apellido" />
                    <TableColumn fx:id="columnEstado" prefWidth="111.0" text="Estado" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
